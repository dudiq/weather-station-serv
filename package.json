{
  "name": "local-weather",
  "version": "0.0.3",
  "private": true,
  "scripts": {
    "build": "NODE_ENV=production dotenv-run -v -- turbo run build --env-mode=loose",
    "dev": "turbo dev",
    "clean:dist": "turbo run clean:dist",
    "build:server": "turbo run build check-types --filter=server... --color",
    "clean": "rimraf ./out && turbo run clean && rimraf ./.turbo",
    "clean:node_modules": "turbo run clean:node_modules && rimraf ./node_modules",
    "clean:reset:all": "git clean -fdx -e .",
    "check-types": "turbo run check-types --color",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint --",
    "test": "turbo run test",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "tsx": "4.20.6"
  },
  "devDependencies": {
    "@dotenv-run/cli": "1.3.6",
    "@dotenv-run/core": "1.3.8",
    "@repo/eslint-config": "workspace:*",
    "@repo/ts-config": "workspace:*",
    "@types/node": "24.6.1",
    "glob": "11.0.3",
    "husky": "9.1.7",
    "lint-staged": "16.2.3",
    "prettier": "3.6.2",
    "rimraf": "6.0.1",
    "tsup": "8.5.0",
    "turbo": "2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20"
  }
}
